/**
 * @file Firestore Security Rules for Wore Well e-commerce platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data (carts, orders),
 * while allowing public read access to product information.
 * All write operations are protected by authentication checks.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only by the owning user.
 * - /products/{productId}: Stores product information, publicly readable, but write-protected.
 * - /users/{userId}/cart: Stores the user's cart, accessible only by the owning user.
 * - /users/{userId}/cart/{cartItemId}/items: Stores cart items, accessible only by the owning user.
 * - /users/{userId}/orders/{orderId}: Stores order information, accessible only by the owning user.
 * - /users/{userId}/orders/{orderId}/items/{orderItemId}: Stores order items, accessible only by the owning user.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Public read access is granted to the /products collection.
 * - The 'id' field within user documents is used to enforce path consistency.
 * - All write operations require a verified user identity.
 *
 * Denormalization for Authorization:
 * - The `Order` documents contain a `userId` field. This allows orders to be queried by `userId`
 *   without needing to perform a collection group query and filtering on the client.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Defines the isSignedIn helper function.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Helper function for authentication.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Defines the isOwner helper function.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Helper function for owner check.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Defines the isExistingOwner helper function.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Helper function for owner check with resource existence validation.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Defines the isValidNewUser helper function.
     * @path N/A
     * @allow N/A
     * @deny N/A
     * @principle Helper function for validating relational integrity during user creation.
     */
    function isValidNewUser(userId) {
        return request.resource.data.id == userId;
    }


    /**
     * @description Enforces access control for user profiles. Only the authenticated user can read/write their own profile.
     * @path /users/{userId}
     * @allow (create) request.auth.uid == 'user_abc' && request.resource.data.id == 'user_abc'
     * @allow (get, update, delete) request.auth.uid == 'user_abc'
     * @deny (create) request.auth.uid != 'user_abc'
     * @deny (get, update, delete) request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted.
      allow create: if isSignedIn() && isValidNewUser(userId);
      allow update: if isExistingOwner(userId) && (request.resource.data.id == resource.data.id);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants public read access to product information, but restricts write access.
     * @path /products/{productId}
     * @allow (get, list) true
     * @deny (create, update, delete) Always
     * @principle Allows public read access but prohibits unauthorized modifications.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Enforces access control for user carts. Only the authenticated user can read/write their own cart.
     * @path /users/{userId}/cart
     * @allow (create) request.auth.uid == 'user_abc'
     * @allow (get, update, delete) request.auth.uid == 'user_abc'
     * @deny (create) request.auth.uid != 'user_abc'
     * @deny (get, update, delete) request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/cart {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for cart items. Only the authenticated user can read/write items in their own cart.
     * @path /users/{userId}/cart/{cartItemId}/items
     * @allow (create) request.auth.uid == 'user_abc'
     * @allow (get, update, delete) request.auth.uid == 'user_abc'
     * @deny (create) request.auth.uid != 'user_abc'
     * @deny (get, update, delete) request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/cart/{cartItemId}/items/{cartItemItemId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for user orders. Only the authenticated user can read/write their own orders.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create) request.auth.uid == 'user_abc'
     * @allow (get, update, delete) request.auth.uid == 'user_abc'
     * @deny (create) request.auth.uid != 'user_abc'
     * @deny (get, update, delete) request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/orders/{orderId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for order items. Only the authenticated user can read/write items in their own orders.
     * @path /users/{userId}/orders/{orderId}/items/{orderItemId}
     * @allow (create) request.auth.uid == 'user_abc'
     * @allow (get, update, delete) request.auth.uid == 'user_abc'
     * @deny (create) request.auth.uid != 'user_abc'
     * @deny (get, update, delete) request.auth.uid != 'user_abc'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/orders/{orderId}/items/{orderItemId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}